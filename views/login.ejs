<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Influencer Planner | Giriş</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body class="login-page">
    <div id="loginApp"></div>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@emotion/react@11.11.4/dist/emotion-react.umd.min.js"></script>
    <script src="https://unpkg.com/@emotion/styled@11.11.5/dist/emotion-styled.umd.min.js"></script>
    <script src="https://unpkg.com/@mui/material@5.15.20/umd/material-ui.production.min.js"></script>
    <script src="https://unpkg.com/framer-motion@11.0.17/dist/framer-motion.umd.js"></script>
    <script>
      const loginData = {
        error: <%- JSON.stringify(error || '') %>,
        logoUrl: <%- JSON.stringify(settings.logoUrl) %>
      };

      const { useState } = React;
      const { motion } = window.framerMotion;
      const {
        Box,
        Card,
        CardContent,
        Typography,
        TextField,
        Button,
        CircularProgress,
        Stack
      } = MaterialUI;

      const LoginApp = () => {
        const [loading, setLoading] = useState(false);

        const handleSubmit = () => {
          setLoading(true);
        };

        return React.createElement(
          Box,
          {
            minHeight: '100vh',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            padding: 3,
            sx: { background: 'linear-gradient(135deg, #e2e8f0 0%, #f8fafc 100%)' }
          },
          React.createElement(
            Card,
            {
              component: motion.div,
              initial: { opacity: 0, y: 16, scale: 0.98 },
              animate: { opacity: 1, y: 0, scale: 1 },
              transition: { duration: 0.35, ease: 'easeOut' },
              sx: { width: 'min(420px, 100%)', boxShadow: '0 30px 80px rgba(15, 23, 42, 0.15)' }
            },
            React.createElement(
              CardContent,
              null,
              React.createElement(
                Box,
                {
                  component: motion.div,
                  initial: { opacity: 0, y: 8 },
                  animate: { opacity: 1, y: 0 },
                  transition: { delay: 0.1 },
                  textAlign: 'center',
                  mb: 3
                },
                React.createElement('img', {
                  src: loginData.logoUrl,
                  alt: 'Influencer Planner',
                  style: { width: 64, marginBottom: 12 }
                }),
                React.createElement(Typography, { variant: 'h5', fontWeight: 600 }, 'Influencer Planner'),
                React.createElement(
                  Typography,
                  { variant: 'body2', color: 'text.secondary' },
                  'Admin paneline hoş geldiniz.'
                )
              ),
              loginData.error
                ? React.createElement(
                    Box,
                    { mb: 2, p: 1.5, borderRadius: 2, sx: { backgroundColor: '#fee2e2', color: '#991b1b' } },
                    loginData.error
                  )
                : null,
              React.createElement(
                'form',
                { action: '/login', method: 'POST', onSubmit: handleSubmit },
                React.createElement(
                  Stack,
                  { spacing: 2 },
                  React.createElement(TextField, {
                    label: 'E-posta',
                    name: 'email',
                    type: 'email',
                    required: true,
                    fullWidth: true
                  }),
                  React.createElement(TextField, {
                    label: 'Şifre',
                    name: 'password',
                    type: 'password',
                    required: true,
                    fullWidth: true
                  }),
                  React.createElement(
                    Button,
                    {
                      type: 'submit',
                      variant: 'contained',
                      size: 'large',
                      disabled: loading,
                      startIcon: loading ? React.createElement(CircularProgress, { size: 18, color: 'inherit' }) : null
                    },
                    loading ? 'Giriş Yapılıyor...' : 'Giriş Yap'
                  )
                )
              ),
              React.createElement(
                Box,
                { mt: 3, textAlign: 'center' },
                React.createElement(
                  Typography,
                  { variant: 'caption', color: 'text.secondary', display: 'block' },
                  'Demo admin: admin@planner.local / admin123'
                ),
                React.createElement(
                  Typography,
                  { variant: 'caption', color: 'text.secondary', display: 'block' },
                  'Demo influencer: influencer@planner.local / infl123'
                )
              )
            )
          )
        );
      };

      ReactDOM.createRoot(document.getElementById('loginApp')).render(React.createElement(LoginApp));
    </script>
  </body>
</html>
