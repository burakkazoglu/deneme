<%- include('partials/head') %>
<%- include('partials/sidebar') %>
<main class="main main-container">
  <header class="main__header">
    <div>
      <h1>Yeni Influencer Ekle/Çıkar</h1>
      <p>Influencer kayıtlarını yönetin.</p>
    </div>
  </header>

  <section class="panel">
    <div class="panel-header">
      <div>
        <h2>Yeni Influencer Ekle</h2>
        <p>Profil bilgilerini doldurun.</p>
      </div>
      <button type="button" data-modal-target="categoryModal">Kategori Yönetimi</button>
    </div>
    <form class="form-grid form-grid--four" action="/influencers/manage" method="POST">
      <label>
        Ad Soyad
        <input type="text" name="fullName" required />
      </label>
      <label>
        E-posta
        <input type="email" name="email" required />
      </label>
      <label>
        Şifre
        <input type="password" name="password" required />
      </label>
      <label>
        Kategori
        <select name="category" id="categorySelect" required>
          <option value="">Seçiniz</option>
          <% categories.forEach((category) => { %>
            <option value="<%= category.name %>"><%= category.name %></option>
          <% }) %>
        </select>
      </label>
      <fieldset class="permissions full-width">
        <legend>Platformlar</legend>
        <div id="platformSelect"></div>
      </fieldset>
      <button type="submit">Influencer Oluştur</button>
    </form>
  </section>

  <section class="panel">
    <h2>Influencer Çıkar</h2>
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Kategori</th>
            <th>Platformlar</th>
            <th>İşlem</th>
          </tr>
        </thead>
        <tbody>
          <% influencers.forEach((influencer) => { %>
            <tr>
              <td><%= influencer.fullName %></td>
              <td><%= influencer.email %></td>
              <td><%= influencer.category || '-' %></td>
              <td><%= influencer.platforms.join(', ') || '-' %></td>
              <td>
                <form action="/influencers/manage/<%= influencer._id %>/delete" method="POST" class="inline-form">
                  <button type="submit" class="danger">Sil</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
  <div class="modal" id="categoryModal" aria-hidden="true">
    <div class="modal__content modal__content--wide">
      <div class="modal__header">
        <h3>Kategori Yönetimi</h3>
        <button type="button" class="modal__close" data-modal-close>✕</button>
      </div>
      <div class="modal__body">
        <div class="category-new-card">
          <div class="category-new-header">
            <h4>Yeni Kategori</h4>
            <p>Yeni kategori ekleyin ve renk seçin.</p>
          </div>
          <div class="category-new-fields">
            <div class="category-new-row">
              <label class="field">
                Kategori adı
                <input type="text" id="newCategoryName" placeholder="Örn: Yemek" required />
                <span class="field-helper" id="newCategoryHelper"></span>
              </label>
              <div class="category-new-actions">
                <span class="color-swatch" id="newCategoryColorPreview" style="background:#3B82F6"></span>
                <button type="button" class="ghost" id="openColorPicker">Renk Seç</button>
                <input type="hidden" id="newCategoryColor" value="#3B82F6" />
                <button type="button" id="addCategoryButton">Ekle</button>
              </div>
            </div>
          </div>
        </div>
        <div class="category-transfer" id="categoryTransfer">
          <div class="category-panel">
            <h4>Aktif Kategoriler</h4>
            <div class="category-list" id="activeCategoryList"></div>
          </div>
          <div class="category-panel">
            <h4>Pasif Kategoriler</h4>
            <div class="category-list" id="inactiveCategoryList"></div>
          </div>
        </div>
        <div class="color-picker-dialog" id="colorPickerDialog" aria-hidden="true">
          <div class="color-picker-card">
            <h4>Renk Seç</h4>
            <div class="color-swatch-grid" id="colorSwatchGrid">
              <button type="button" class="color-swatch-button" data-color="#3B82F6">
                <span class="color-dot" style="background:#3B82F6"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#6366F1">
                <span class="color-dot" style="background:#6366F1"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#10B981">
                <span class="color-dot" style="background:#10B981"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#F59E0B">
                <span class="color-dot" style="background:#F59E0B"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#EF4444">
                <span class="color-dot" style="background:#EF4444"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#111827">
                <span class="color-dot" style="background:#111827"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#EC4899">
                <span class="color-dot" style="background:#EC4899"></span>
                <span class="material-icons color-check">check</span>
              </button>
              <button type="button" class="color-swatch-button" data-color="#0EA5E9">
                <span class="color-dot" style="background:#0EA5E9"></span>
                <span class="material-icons color-check">check</span>
              </button>
            </div>
            <div class="color-picker-preview" id="colorPickerPreview" style="background:#3B82F6"></div>
            <input type="color" id="colorPickerInput" value="#3B82F6" class="color-input-hidden" />
            <button type="button" class="ghost outline-full" id="openCustomColor">Özel renk</button>
            <div class="color-picker-actions">
              <button type="button" class="ghost" id="cancelColorPick">İptal</button>
              <button type="button" id="saveColorPick">Kaydet</button>
            </div>
          </div>
        </div>
      </div>
      <div class="modal__footer">
        <button type="button" class="ghost" id="cancelCategoryChanges">İptal</button>
        <button type="button" id="saveCategoryChanges">Kaydet</button>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
